{
  "name": "trillonew",
  "version": "1.0.0",
  "description": "trillonew app",
  "main": "index.js",
  "scripts": {
    "watch:sass": "sass sass/main.scss css/style.css --watch",
    "clean": "rm -rf dist",
    "prepare:dist": "mkdir -p dist",
    "copy:assets": "cp index.html dist/ && cp -r img dist/",
    "compile:sass": "sass sass/main.scss dist/css/style.css",
    "prefix:css": "postcss dist/css/style.css --use autoprefixer -o dist/css/style.css",
    "build:css": "npm-run-all compile:sass prefix:css",
    "build": "npm-run-all clean prepare:dist copy:assets build:css",
    "deploy": "npm run build && gh-pages -d dist",
    "format": "prettier --write ."
  },
  "author": "TNTHNGVDYNND",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.24",
    "concat": "^1.0.3",
    "gh-pages": "^6.3.0",
    "npm-run-all": "^1.1.3",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "prettier": "^3.8.1",
    "sass": "^1.97.3"
  }
}
